@model IEnumerable<StokTakip.Models.Kullanici>
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Tasarim/_LayoutForm.cshtml";
}

<div class="header">
    <div class="header-content">
        <div class="page-title">
            <i class="icon-select2 position-left"></i> Kullanıcı Ekleme Paneli
        </div>
        <ul class="breadcrumb">
            <li><a href="/Anasayfa/">Anasayfa</a></li>
            <li>Kullanıcı Ekleme </li>
            <li>Kullanıcılar</li>
            <li class="active">Kullanıcı Ekleme Paneli</li>
        </ul>
    </div>
</div>

<div class="container-fluid page-content">
    <form class="form-horizontal" action="/Admin/Ekle" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h4 class="panel-title">Kullanıcı Ekle</h4>
            </div>

            <div class="panel-body">

                <fieldset>
                    <div class="form-group">
                        <label class="control-label col-lg-2">Adı Soyadı</label>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-user"></i></span>
                                <input type="text" class="form-control" name="AdSoyad">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2">Kullanıcı Adı</label>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-user"></i></span>
                                <input type="text" class="form-control" name="KullaniciAdi">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2">Şifre</label>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-user"></i></span>
                                <input type="text" class="form-control" name="Sifre">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2">E-mail</label>
                        <div class="col-lg-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-user"></i></span>
                                <input type="text" class="form-control" name="Email">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2">Yetki</label>
                        <div class="col-lg-10">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" class="control-primary" name="Yetki" value="off">
                                </label>
                            </div>
                        </div>
                    </div>
                        @*<label class="control-label col-lg-2">Yetki</label>
                                <input type="checkbox" class="form-control" name="Yetki">*@
                  
                </fieldset>

            </div>
        </div>

        <div class="panel panel-flat">
            <div class="panel-body">
                <h5 class="no-margin-top"></h5>
                <button type="submit" class="btn btn-success">Ekle</button>

            </div>
        </div>
    </form>

    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">Kullanıcı Listesi</h5>
        </div>

        <table class="table datatable datatable-column-search-selects">
            <thead>
                <tr>
                    <th class="col-md-1"># ID</th>
                    <th class="col-md-1">Adı Soyadı</th>
                    <th class="col-md-1">Kullanıcı Adı</th>
                    <th class="col-md-1">Şifre</th>
                    <th class="col-md-1">E-mail</th>
                    <th class="col-md-1">Yetki</th>
                    <th class="col-md-1 text-center">Admin</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.KullaniciID</td>
                        <td>@item.AdSoyad</td>
                        <td>@item.KullaniciAdi</td>
                        <td>@item.Sifre</td>
                        <td>@item.Email</td>
    @if (item.Yetki == true)
    {

                        <td><span class="label label-success">ADMİN</span></td>

    }
    else
    {
        <td><span class="label label-danger">Kullanıcı</span></td>
    }
                        <td class="col-md-1 text-center">
                            <a href="/Admin/Sil/@item.KullaniciID" class="edit-row">
                                <span class="label label-danger"> Sil</span>
                            </a>&nbsp;&nbsp;
                            <a href="/Admin/Duzenle/@item.KullaniciID" class="delete-row">
                                <span class="label label-info"> Düzenle </span>
                            </a>&nbsp;&nbsp;
                            @*<ul class="icons-list">
                <li><a href="/Urun/Detay/@item.UrunID" data-toggle="modal" data-target="#invoice" title="Görüntülen"><i class="icon-eye2"></i></a></li>
                <li class="dropdown">
                    <a href="datatable_advanced.html#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-menu7"></i></a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a href="/Urun/Detay/@item.UrunID"><i class="icon-file-download2"></i> Detay</a></li>
                        <li><a href="/Urun/Duzenle/@item.UrunID"><i class="icon-file-download2"></i> Düzenle</a></li>
                        <li class="divider"></li>
                        <li><a href="/Urun/GirisGonder/@item.UrunID"><i class="icon-trash"></i> [ Depo Giriş ]</a></li>
                    </ul>
                </li>
            </ul>*@
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th># ID</th>
                    <th>Adı Soyadı </th>
                    <th>Kullanıcı Adı</th>
                    <th>Şifre</th>
                    <th>E-mail</th>
                    <th>Yetki</th>
                    <td class="col-md-1 text-center">Admin</td>
                </tr>
            </tfoot>
        </table>
    </div>
    <!--Rightbar Chat-->
    <!--/Rightbar Chat-->

</div>
