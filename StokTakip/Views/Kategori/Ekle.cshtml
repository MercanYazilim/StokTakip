@model StokTakip.Models.Raf
@{
    ViewBag.Title = "Ekle";
        Layout = "~/Views/Tasarim/_LayoutForm.cshtml";
}


<div class="header">
    <div class="header-content">
        <div class="page-title">
            <i class="icon-select2 position-left"></i>Mamül Ürün Ekleme Paneli
        </div>
        <ul class="breadcrumb">
            <li><a href="/Admin/">Anasayfa</a></li>
            <li>Mamül Ürün Ekleme </li>
            <li>Mamül Ürün</li>
            <li class="active">MamülÜrün Ekleme Paneli</li>
        </ul>
    </div>
</div>
<div class="container-fluid page-content">

    @*<h4>
            Ürün Ekleme Paneli
            <small class="display-block">Examples with basic options</small>
        </h4>*@

    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="panel panel-flat">
                <div class="panel-heading">
                    <h5 class="panel-title">MamülÜrün Ekle</h5>

                </div>

                <div class="panel-body">
                    <form class="form-horizontal" action="/Kategori/Ekle" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Ürün Resim</label>
                            <input type="file" name="Resim"/>
                        </div>
                        <div class="form-group">
                            <label>Ürün Adı</label>
                            <input type="search" class="form-control" name="UrunAdi" placeholder="Ürün Adını Giriniz">
                        </div>
                        <div class="form-group">
                            <label>Ürün Kodu</label>
                            <input type="search" class="form-control" name="UrunKodu" placeholder="Ürün Kodunu Giriniz">
                        </div>
                        <div class="form-group">
                            <label class="display-block">Raf Seçiniz</label>
                            @Html.DropDownList("RafID", (SelectList)ViewBag.Raf, new { @class = "select-border-color border-warning", @multiple = "multiple" })
                            @*@Html.DropDownList("KategoriID", (SelectList)ViewBag.Kategori, new MultiSelectList(Model.KategoriID, "TagID", "Tag"), null)*@
                        </div>
                        <div class="form-group">
                            <label>Stok Miktarı</label>
                            <input type="search" class="form-control" name="StokMiktar" placeholder="Stok Miktarı Giriniz">
                        </div>
                        <div class="form-group">
                            <label>Alış Fiyatı</label>
                            <input type="search" class="form-control" name="AlisFiyat" placeholder="Alış Fiyatını Giriniz">
                        </div>
                        <div class="form-group">
                            <label>Satış Fiyatı</label>
                            <input type="search" class="form-control" name="SatisFiyat" placeholder="Satış Fiyatı Giriniz">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea rows="5" name="Aciklama" class="form-control" placeholder="Açıklama Giriniz"></textarea>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary pull-right">
                                Gönder <i class="fa fa-arrow-circle-right"></i>
                            </button>

                        </div>
                    </form>
                   </div>
                </div>
            @ViewBag.Durum
                <!--Rightbar Chat-->
                <!--/Rightbar Chat-->
            </div>
        </div>
    </div>

