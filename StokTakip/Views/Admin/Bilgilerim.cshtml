            <label class="control-label col-lg-2">Yetki</label>
            <div class="col-lg-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" class="control-primary" name="Yetki" value="off" checked="@Model.Yetki">
                    </label>
                </div>
            </div>
        </div>*@
                    @*<label class="control-label col-lg-2">Yetki</label>
        <input type="checkbox" class="form-control" name="Yetki">*@

                </fieldset>

            </div>
        </div>

        <div class="panel panel-flat">
            <div class="panel-body">
                <h5 class="no-margin-top"></h5>
                <button type="submit" class="btn btn-success">Güncelle</button>

            </div>
        </div>
    </form>


</div>




