                        <div class="form-group">
                            <label>Stok Miktarı</label>
                            <input type="search" class="form-control" name="StokMiktar" placeholder="Stok Miktarı Giriniz" value="@Model.Mamul.StokMiktar">
                        </div>
                        <div class="form-group">
                            <label>Alış Fiyatı</label>
                            <input type="search" class="form-control" name="AlisFiyat" placeholder="Alış Fiyatını Giriniz" value="@Model.Mamul.AlisFiyat">
                        </div>
                        <div class="form-group">
                            <label>Satış Fiyatı</label>
                            <input type="search" class="form-control" name="SatisFiyat" placeholder="Satış Fiyatı Giriniz" value="@Model.Mamul.SatisFiyat">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea rows="5" name="Aciklama" class="form-control" placeholder="Açıklama Giriniz">@Model.Mamul.Aciklama</textarea>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary pull-right">
                                Gönder <i class="fa fa-arrow-circle-right"></i>
                            </button>

                        </div>
