@model StokTakip.Models.Kategori
@{
    ViewBag.Title = "Detay";
        Layout = "~/Views/Tasarim/_Layout.cshtml";
}
<script src="http://code.jquery.com/jquery-1.8.2.js"></script>

<script type="text/javascript">
    function printDiv(divName) {
        var printContents = document.getElementById(divName).innerHTML;
        var originalContents = document.body.innerHTML;
        document.body.innerHTML = printContents;
        window.print();
        document.body.innerHTML = originalContents;
    }
</script>

<div class="header">
    <div class="header-content">
        <div class="page-title"><i class="icon-display4"></i>Mamül Detay</div>
        <ul class="breadcrumb">
            <li><a href="/Admin">Anasayfa</a></li>
            <li><a href="/Admin">Mamül Detay</a></li>
            <li class="active"><a href="#">Mamül Detay</a></li>
        </ul>
    </div>
</div>

<div class="container-fluid page-content">
    <br />
    <a href="/Kategori/Barcode/@Model.KategoriID" class="btn btn-wide btn-success"><i class="fa fa-print"></i> Barcode</a> 
    <a href="/Kategori/Detay/@Model.KategoriID" class="btn btn-wide btn-success"><i class="fa fa-print"></i> Detay</a> 
    <a href="#" class="btn btn-wide btn-success"><i class="fa fa-print"></i> Giriş Formu</a> 
    <a href="#" class="btn btn-wide btn-success"><i class="fa fa-print"></i> Çıkış Formu</a>
    <br /><br />

        <div class="col-md-6 col-sm-6">
            <div class="panel panel-flat">
                @*<div class="panel-heading">
                    <h4 class="panel-title">
                       PRODEPO MAKİNA EKİPMAN GİRİŞ FORMU
                    </h4>
                </div>*@

                <div class="panel-body no-padding-bottom">

                    <CENTER>
                        <img src='@Url.Action("Borcode", "Urun", new { kod = Model.Barcod })' /><br /><br />
                        <font size="8px">  <b> * @Model.Barcod * </b></font>
                    </CENTER>
                    <table class="table table-condensed" border="1">
                        <thead>
                            @*<tr>
                                <th colspan="3">Ürün Detayları</th>
                            </tr>*@
                        </thead>

                        <tbody>
                            <tr>
                                <td>ÜRÜN RESMİ</td>
                                <td>
                                    @*<div class="col-md-4 col-sm-4">*@
                                    <div class="thumbnail">
                                        <div class="thumb">
                                            <img alt="" src="@Model.Resim" height="200" width="350">
                                            <div class="caption-overflow">
                                                <span>
                                                    <center> <a href="@Model.Resim" class="venobox btn border-none text-white btn-flat btn-icon"><i class="icon-zoomin3"></i></a></center>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    @*</div>*@
                                    @*<img src="@Model.Resim" />*@
                                </td>

                            </tr>
                            <tr>
                                <td>ÜRÜN ADI</td>
                                <td>
                                    @Model.UrunAdi
                                </td>

                            </tr>
                            <tr>
                                <td>ÜRÜN KODU</td>
                                <td>
                                    @Model.UrunKodu
                                </td>

                            </tr>
                            <tr>
                                <td>STOK MİKTARI</td>
                                <td>
                                    @if (Model.StokMiktar != null)
                                    {
                                        @Model.StokMiktar

                                    }

                                </td>

                            </tr>
                            @if (Session["id"] != null)
                            {
                                <tr>
                                    <td>ALIŞ FİYAT</td>
                                    <td>
                                        @if (Model.AlisFiyat != null)
                                        {
                                            @Model.AlisFiyat

                                        }

                                    </td>

                                </tr>

                                <tr>
                                    <td>SATIŞ FİYATI </td>
                                    <td>
                                    @if (Model.AlisFiyat != null)
                                    {
                                        @Model.SatisFiyat

                                    }
                                   </td>
                                </tr>
                            }
                            <tr>
                                <td> GİRİŞ TARİHİ </td>
                                <td>
                                    @if (Model.GirisTarhi != null)
                                    {
                                        @Model.GirisTarhi.Value.ToShortDateString()
                                    }

                                </td>
                            </tr>
                            <tr>
                        </tbody>
                    </table>

                </div>
            </div>
            <div id="barcode_goster" class="row">
                @Html.Action("_YariMamul", "Kategori", new { id = Model.KategoriID })

            </div>
            <a href="javascript:printDiv('barcode_goster');" class="btn btn-wide btn-success"><i class="fa fa-print"></i> Yazdır</a><br />
        </div>

   

</div>