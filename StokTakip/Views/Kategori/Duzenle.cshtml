                        </div>
                        <div class="form-group">
                            <label>Ürün Resim</label>
                            <input type="file" name="Resim" />
                        </div>
                        <div class="form-group">
                            <label>Barcode</label>
                            <input type="search" class="form-control" name="Barcod" value="@Model.Mamul.Barcod">
                        </div>

                        <div class="form-group">
                            <label>Ürün Adı</label>
                            <input type="search" class="form-control" name="UrunAdi" placeholder="Ürün Adını Giriniz" value="@Model.Mamul.UrunAdi">
                        </div>
                        <div class="form-group">
                            <label>Ürün Kodu</label>
                            <input type="search" class="form-control" name="UrunKodu" placeholder="Ürün Kodunu Giriniz" value="@Model.Mamul.UrunKodu">
                        </div>

                        @*<div class="form-group">
                            <label class="display-block">Raf Seçiniz</label>
